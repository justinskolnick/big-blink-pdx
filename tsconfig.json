{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "es2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es2022"
  },
  "include": [
    "app/**/*",
    "assets/scripts"
  ],
  "exclude": ["node_modules"]
}